{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!**/node_modules/**",
			"!**/dist/**",
			"!**/build/**",
			"!**/.venv/**",
			"!**/venv/**",
			"!**/.expo/**",
			"!**/.expo-shared/**",
			"!**/.vscode-test/**",
			"!**/android/**",
			"!**/ios/Pods/**",
			"!**/ios/Podfile.lock",
			"!**/ios/build/**",
			"!**/prisma/generated/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
