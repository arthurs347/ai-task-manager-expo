datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  fullName       String?
  image          String?
  manualTasks    ManualTask[]
  automaticTasks AutomaticTask[]
  habits         Habit[]
}

model ManualTask {
  id                String   @id @default(cuid())
  taskType          TaskType @default(MANUAL)
  title             String
  description       String?
  start             DateTime
  end               DateTime
  estimatedDuration Int // in minutes
  isRecurring       Boolean
  completed         Boolean  @default(false)
  user              User     @relation(fields: [userId], references: [id])
  userId            String
}

model AutomaticTask {
  id                String           @id @default(cuid())
  taskType          TaskType         @default(AUTOMATIC)
  title             String
  description       String?
  start             DateTime
  end               DateTime
  dueDateTime       DateTime
  estimatedDuration Int // in minutes
  isHardDeadline    Boolean
  isRecurring       Boolean
  isStatic          Boolean
  priorityLevel     PriorityLevel
  priorityScore     Int
  priorityCategory  PriorityCategory
  completed         Boolean          @default(false)
  user              User             @relation(fields: [userId], references: [id])
  userId            String
}

model Habit {
  id                String   @id @default(cuid())
  taskType          TaskType @default(HABIT)
  title             String
  description       String?
  start             DateTime
  end               DateTime
  estimatedDuration Int // in minutes
  completed         Boolean  @default(false)
  currentlyUsed     Boolean  @default(false)
  user              User     @relation(fields: [userId], references: [id])
  userId            String
}

enum PriorityLevel {
  LOW
  MED
  HIGH
  CRIT
}

enum PriorityCategory {
  LOW
  MED
  HIGH
  CRIT
}

enum TaskType {
  MANUAL
  AUTOMATIC
  HABIT
  LISTED
}
